<p>
  <%= link_to "Create New TODO", new_todo_path, class: "text-info" %>
</p>
</br>
<table class="table table-hover table-dark left-align">
  <tr class="left-align">
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% object.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todo), class: "text-info" %></td>
      <td><%= link_to "Show", todo_path(todo), class: "text-info" %></td>
      <td><%= link_to "Delete", todo_path(todo), class: "text-danger", method: :delete, data: {confirm: "Delete Todo: Are you sure?"} %></td>
    </tr>
  <% end %>
</table>