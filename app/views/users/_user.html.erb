<div class="table-responsive-sm">
  <table class="table table-hover table-dark left-align">
    <tr class="left-align">
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% object.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user), class: "text-info" %></td>
        <td><%= link_to "Show", user_path(user), class: "text-info" %></td>
        <td><%= link_to "Delete", user_path(user), class: "text-danger", method: :delete, data: {confirm: "Delete User and All of their Todos: Are you sure?"} %></td>
      </tr>
    <% end %>
  </table>
</div>